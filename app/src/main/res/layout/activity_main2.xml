<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="402dp"
        android:layout_height="567dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="16dp"
            android:text="Calculadora"
            android:textColor="@color/NombrePrincipal"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="93dp"
            android:text="Prestamos"
            android:textColor="@color/NombrePrincipal"
            android:textSize="20sp"
            tools:ignore="RtlCompat"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="83dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:text="-------------------------------------------------------------------------------------"
            android:textColor="@color/dise"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="155dp"
            android:text="Monto"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txe_total"
            android:layout_alignTop="@+id/textView5"
            android:text="Tasa"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="149dp"
            android:layout_alignLeft="@+id/txe_total" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/textView5"
            android:layout_marginLeft="-112dp"
            android:layout_marginStart="-112dp"
            android:layout_toEndOf="@+id/txe_total"
            android:layout_toRightOf="@+id/txe_total"
            android:text="Cuotas"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="286dp"
            tools:layout_editor_absoluteY="147dp" />


        <EditText
            android:id="@+id/txe_monto"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="17dp"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="186dp" />


        <EditText
            android:id="@+id/txe_tasa"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txe_monto"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="186dp" />

        <EditText
            android:id="@+id/txe_cuota"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="186dp" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginBottom="184dp"
            android:text="Cuota Mensual"
            android:textColor="@color/NombrePrincipal"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="367dp" />


        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_centerVertical="true"
            android:background="@color/dise"
            android:text="Calcular"
            android:textColor="@color/NombrePrincipal"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="256dp" />

        <EditText
            android:id="@+id/txe_total"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            android:ems="10"
            android:inputType="number"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="177dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>